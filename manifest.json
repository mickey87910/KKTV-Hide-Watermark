{
    "manifest_version": 3,
    "name": "KKTV Hide Watermark",
    "description": "Hide KKTV watermark",
    "version": "1.0.3",
    "icons":{
      "16": "img/icon16.png",
      "128": "img/icon128.png"
    },
    "action": {
      "default_icon": "img/icon128.png",
      "default_title": "KKTV Hide Watermark"
    },
    "content_scripts": [
        {
            "matches": ["https://www.kktv.me/*","https://kktv.me/*"],
            "run_at": "document_end",
            "css": ["content.css"]
        }
    ]
  }
